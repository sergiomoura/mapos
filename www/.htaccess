#AddHandler php71-script .php
#suPHP_ConfigPath /home/maxse/
##### LOCAWEB - NAO REMOVER #####

#liberando os headers
SetEnvIf Authorization "(.+)" HTTP_AUTHORIZATION=$1

<IfModule mod_rewrite.c>

	#ligando o Rewrite engine
	RewriteEngine on
	
	# Handle API Requests
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_URI} ^/maxse/api/
	RewriteRule ^ /maxse/api/api/index.php [L]

	# pure angular routes
	RewriteBase /
	RewriteRule ^index\.html$ - [L]
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule . /maxse/index.html [L]

</IfModule>
